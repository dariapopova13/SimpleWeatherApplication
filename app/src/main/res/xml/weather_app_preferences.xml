<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/preferene_settings_categoty_title">

        <ListPreference
            android:defaultValue="C"
            android:entries="@array/temp_settings_array"
            android:entryValues="@array/temp_settings_array"
            android:icon="@drawable/ic_sunny"
            android:key="temp_units"
            android:summary="%s"
            android:title="@string/temp_title" />

        <ListPreference
            android:defaultValue="Km"
            android:entries="@array/distance_settings_array"
            android:entryValues="@array/distance_settings_array_saved_names"
            android:icon="@drawable/ic_distance"
            android:key="distance_units"
            android:summary="%s"
            android:title="@string/distance_title" />
        <ListPreference
            android:defaultValue="24"
            android:entries="@array/time_format_settings_array"
            android:entryValues="@array/time_format_settings_array"
            android:icon="@drawable/ic_time_format"
            android:key="time_format"
            android:summary="%s"
            android:title="@string/time_format_title" />
    </PreferenceCategory>

</PreferenceScreen>